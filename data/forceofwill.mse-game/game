	name: copyright
	description: Copyright information that shows at the bottom of all cards.
	
### packs
pack type:
	name: Booster Pack
	item:
		name: common
		amount: 5
	item:
		name: basic or rare or SR
		amount: 1
	item:
		name: foil or ruler
		amount: 1
	item:
		name: uncommon
		amount: 2
	item:
		name: rare
		amount: 1
		
### pack proportions
pack type:
	name: basic or rare or SR
	selectable: false
	select: equal
	item:
		name: basic
		weight: 22
	item:
		name: rare
		weight: 5
	item:
		name: SR
		weight: 9
pack type:
	name: foil or ruler
	selectable: false
	select: equal
	item:
		name: Ruler
		weight: 2
	item:
		name: nonRulerFoil
		weight: 34
		
### card definitions
pack type:
	name: basic
	select: equal
	filter: card.race == "Magic Stone"
pack type:
	name: common
	filter: card.rarity == "C" and card.race != "Magic Stone"
pack type:
	name: uncommon
	filter: card.rarity == "U"
pack type:
	name: rare
	filter: card.rarity == "R" and card.cardtype != "ruler" and card.cardtype != "jruler"
pack type:
	name: SR
	filter: card.rarity == "SR"
pack type:
	name: Ruler
	filter: card.cardtype == "ruler"
pack type:
	name: nonRulerFoil
	filter: card.cardtype != "ruler" and card.cardtype != "jruler"
		