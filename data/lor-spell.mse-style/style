extra card field:
	type: choice
	name: stamp
	choice: normal
	show statistics: false
	editable: false
extra card style:
	stamp:
		left:	10
		top:	97
		width:	52
		height:	52
		z index: 0
		render style: image
		choice images:
			normal: 
				script:
					fr := speed_frame()
					if (fr == "skill") then "/LoR.mse-game/frame/spell/skillstamp.png"
					else if (fr == "focus") then "/LoR.mse-game/frame/spell/focusstamp.png"
					else if (fr == "burst") then "/LoR.mse-game/frame/spell/burststamp.png"
					else if (fr == "fast") then "/LoR.mse-game/frame/spell/faststamp.png"
					else if (fr == "equipment") then "/LoR.mse-game/frame/spell/equipstamp.png"
					## else if (fr == "slow") then "/LoR.mse-game/frame/spell/slowstamp.png"
					## else if (fr == "trap") then "/LoR.mse-game/frame/spell/nostamp.png"
					else "" 
					
extra card field:
	type: choice
	name: gemstamp
	choice: normal
	show statistics: false
	editable: false
extra card style:
	gemstamp:
		left:	0
		top:	{ if (speed_frame() == "slow" or speed_frame() == "equipment") then 0 else 1 }
		width:	340
		height:	512
		z index: 5
		render style: image
		choice images:
			normal: 
				script:
					fr := speed_frame()
					if (fr == "skill" or fr == "origin") then (fr := "trap")
					if (card.rarity == "Epic" and card.typetype != "" and fr != "trap") then "/LoR.mse-game/frame/spell/epicstamp.png"
					else if (card.rarity == "Rare" and card.typetype != "" and fr != "trap") then "/LoR.mse-game/frame/spell/rarestamp.png"
					else if (card.rarity == "Common" and card.typetype != "" and fr != "trap") then "/LoR.mse-game/frame/spell/commonstamp.png"
					else ""
									
