					if (fr == "equipment") then (fr := "slow")
					ame := ""
					if (fr != "trap") then (ame := to_lower(card.rarity))
					if (card.typetype != "") then (ame := "token")
					"/LoR.mse-game/frame/spell/frame" + fr + ame + ".png"
