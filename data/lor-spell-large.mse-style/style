############################################################## Extra scripts
init script:
	keyword_chop := {
		hack := 0
		if (card.keysymbolreal == "Blank" or speed_frame() == "trap") and not (conjoin() and styling.number_of_keywords == "2") then hack := 26
		if styling.set_keyword_chop != "" then ( to_number(styling.set_keyword_chop) + hack )
		## else ( for each k:v in keyword_chops do  if k == card.keywordtext then v )
		else min( to_int((338 - card_style.keywordtext.content_width)/2) + hack, 150)
	}
	keyword_height := { 312 - the_great_offset() + to_number(styling.set_keywords_offset) + name_offset() }
	text_lines := {	max(1, (hight/2) div (fs*1.275)) }
	font_size := { 
		if fld == "name" then
			if (styling.set_title_font_size != "" and styling.set_title_font_size != "-") then to_number(styling.set_title_font_size) else 20
		else if fld == "ability" then 
			if (styling.set_text_font_size != "" and styling.set_text_font_size != "-") then to_number(styling.set_text_font_size) else 13
		else 0
	}
	name_offset := {
		x := to_number(styling.set_title_offset)
		fsr := font_size(fld: "name")
		x + ((text_lines(hight: card_style.name.content_height, fs:fsr) - 1) * fsr + (fsr - 20)) * 1.275
	}
	the_great_offset := {
		fsr := font_size(fld: "name")
		if text_lines(hight: card_style.name.content_height, fs:fsr) == 1 then 0 else 2
	}
	speed_frame := {
		v := card.keysymbolreal
		if styling.no_of_keywords != 1 then (
			v := card.keysymbol1
			if substring(v, end:5) != "Spell" then (
				v := card.keysymbol2
				if substring(v, end:5) != "Spell" then (
					v := card.keysymbol3
					if substring(v, end:5) != "Spell" then (
						v := card.keysymbol4
					)
				)
			)
		)
		if styling.set_spell_speed_frame == "Burst" or (styling.set_spell_speed_frame == "Default" and v == "Spell Burst") then "burst"
		else if styling.set_spell_speed_frame == "Focus" or (styling.set_spell_speed_frame == "Default" and v == "Spell Focus") then "focus"
		else if styling.set_spell_speed_frame == "Fast" or (styling.set_spell_speed_frame == "Default" and v == "Spell Fast") then "fast"
		else if styling.set_spell_speed_frame == "Skill" or (styling.set_spell_speed_frame == "Default" and v == "Spell Skill") then "skill"
		else if styling.set_spell_speed_frame == "Trap" or (styling.set_spell_speed_frame == "Default" and v == "Spell Trap") then "trap"
		else if styling.set_spell_speed_frame == "Boon" or (styling.set_spell_speed_frame == "Default" and v == "Spell Boon") then "trap"
		else if styling.set_spell_speed_frame == "Origin" or (styling.set_spell_speed_frame == "Default" and v == "Spell Origin") then "origin"
		else if styling.set_spell_speed_frame == "Equipment" or (styling.set_spell_speed_frame == "Default" and v == "Spell Equipment") then "equipment"
		else "slow"
	}
	origin_offset := {
		if speed_frame() == "origin" then -80
		else 0
	}
	conjoin := {
		if styling.conjoin_first_two_keyword_boxes == "Always" then true
		else if styling.conjoin_first_two_keyword_boxes == "Never" then false
		else ((styling.no_of_keywords > 1) and (card.keysymbol1 == "Standard Can't Attack") and (card.keysymbol2 == "Standard Can't Block"))		
	}

############################################################## Extra style options
styling field:
	type: choice
	name: no of keywords
	description: Set the number of keywords to use. Keyword text can only be if used if this is set to 1.
	choice: 1
	choice: 2
	choice: 3
	choice: 4
	initial: 1
styling field:
	type: choice
	name: set spell speed frame
	description: Determines which frame styling is used. By default, checks the first keyword symbol.
	choice: Default
	choice: Burst
	choice: Focus
	choice: Fast
	choice: Slow
	choice: Skill
	choice: Trap
	choice: Origin
	choice: Equipment
	initial: Default
styling field:
	type: choice
	name: background style
	description: Sets whether to use a colored background or an image background for the body of the card.
	initial: Color
	choice: Color
	choice: Image
styling field:
	type: choice
	name: number of regions
	description: Set the number of regions of the card. Only the first will be displayed in the cardlist.
	choice: 0
	choice: 1
	choice: 2
	choice: 3
	initial: 1
styling field:
	type: text
	name: set title font size
	description: Sets the font size of the card's name. Leave blank to default to 20.
styling field:
	type: text
	name: set text font size
	description: Sets the font size of the card's ability text. Leave blank to default to 13.
styling field:
	type: text
	name: set keyword chop
	description: Overrides the regular sizing of the keyword box. Automatic resizing is disabled if this field contains a value.
styling field:
	type: text
	name: set title offset
	description: Adjusts the position of the name, keywords and ability text.
styling field:
	type: text
	name: set keywords offset
	description: Adjusts the position of the keywords and ability text.
styling field:
	type: text
	name: set ability text offset
	description: Adjusts the position of the ability text.
styling field:
	type: choice
	name: conjoin first two keyword boxes
	description: Determines when the first and second keyword boxes are merged into one when two or more are displayed.
	initial: Only for "Can't Attack / Block"
	choice: Never
	choice: Only for "Can't Attack / Block"
	choice: Always
styling field:
	type: boolean
	name: use image background
	description: Determines whether to use a block colour background an image input background.
	initial: no
